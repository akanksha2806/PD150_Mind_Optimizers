<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5FFFA"
        tools:context=".ScholarshipActivity">

        <TextView
            android:id="@+id/scholarship1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre-Matric Scholarship for Students with Disabilities"
            android:layout_marginTop="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/scholarship2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Post Matric Scholarship for Students with Disabilities"
            android:layout_marginTop="20sp"
            android:textSize="30sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/scholarship3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scholarship Scheme from Trust Fund"
            android:layout_marginTop="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/scholarship4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scholarship Scheme from National Fund"
            android:layout_marginTop="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/scholarship5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Fellowship for Students with Disabilities"
            android:layout_marginTop="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/scholarship6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Overseas Scholarship (NOS) for Students with Disabilities"
            android:layout_marginTop="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/scholarship7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/scholarship8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre-Matric Scholarship for Students with Disabilities"
            android:layout_marginTop="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>


    </LinearLayout>
</ScrollView>