<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#c4ff4d"
        tools:context=".HealthActivity">

        <TextView
            android:id="@+id/Resources1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unique Disability Id"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/Resources2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="Skill Council" />
        <TextView
            android:id="@+id/Resources3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="National Handicapped Finance and development Corporation"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/Resources4"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:text="Maharashtra State Handicapped Finance and Development Corporation "
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/Resources5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="All India Confederation of the Blind"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/Resources6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empowerment of persons with disability department"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/Resources7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="Organisation of persons with disabilities empowerment"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/Resources8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="Right To Education"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/Resources9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="International disability and development consodium"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/Resources10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organisation of persons with disabilities empowerment"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

    </LinearLayout>
</ScrollView>